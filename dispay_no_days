#include <stdio.h>

int main() {
    int month, year;

    printf("Enter month number (1-12): ");
    scanf("%d", &month);
    printf("Enter year: ");
    scanf("%d", &year);

    // Check for months with 31 days
    if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12) {
        printf("\n31 Days in this Month\n");
    }
    // Check for months with 30 days
    else if (month == 4 || month == 6 || month == 9 || month == 11) {
        printf("\n30 Days in this Month\n");
    }
    // Check for February (28 or 29 days)
    else if (month == 2) {
        // Leap year check: divisible by 4 but not 100, or divisible by 400
        if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
            printf("\n29 Days in this Month (Leap Year)\n");
        } else {
            printf("\n28 Days in this Month\n");
        }
    }
    // Handle invalid input
    else {
        printf("\nInvalid Month number. Please enter a number between 1 and 12.\n");
    }

    return 0;
}
